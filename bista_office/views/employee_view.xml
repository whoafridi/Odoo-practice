<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="employee_menu_action" model="ir.actions.act_window">
            <field name="name">Employees</field>
            <field name="res_model">office.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field> 
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create The First Employee</p>
            </field>
        </record>        
        <!-- tree view of student model  -->
        <record id="view_employee_tree" model="ir.ui.view">
            <field name="name">office.employee.tree.view</field>
            <field name="model">office.employee</field>
            <field name="arch" type="xml">
                <tree string="Employee">
                    <field name="employee_dob"/>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="is_regular"/>
                    <field name="photo"/>
                    <field name="employee_description"/>
                    <field name="employee_salary"/>
                    <field name="phone"/>
                    <field name="employee_blood_group"/>
                </tree>
            </field>
        </record>       
         <!-- form view of student model  -->
        <record id="employee_form_view" model="ir.ui.view">
            <field name="name">office.employee.form.view</field>
            <field name="model">office.employee</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Employee details">
                            <field name="name" />
                            <field name="age" />
                            <field name="gender"/>
                            <field name="employee_dob" />
                        </group>
                        <group string="Employee area">
                            <group string="Employee section">
                                <field name="is_regular"/>
                                <field name="employee_blood_group"/>
                                <field name="employee_salary"/>
                            </group>
                            <group string="Employee section 2">
                                <field name="photo"/>
                                <field name="employee_image" />
                                <field name="employee_html"/>
                                <field name="employee_description" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Filtering">
                                <group>
                                    <field name="phone" />
                                    <field name="email"/>
                                </group>
                            </page>
                        </notebook>
                        <!-- <footer>
                            <button name='check_mark' type='object' string="Check Qualify" class='btn btn-primary'/>
                        </footer> -->
                    </sheet>
                </form>
            </field>
        </record>       
        
        <menuitem id="employee_menu" name="Employee" />
        <menuitem id="office_employee_menu" parent="employee_menu" name="Employee" action="employee_menu_action" sequence="1"/>
    </data>
</odoo>